<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/rem_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginHorizontal="100dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/twotone_alarm_black_24dp"
        android:text="Reminder"
        android:textSize="18sp" />

    <Button
        android:id="@+id/todo_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rem_button"
        android:layout_margin="10dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/twotone_list_alt_black_24dp"
        android:text="Todo"
        android:textSize="18sp" />

    <Button
        android:id="@+id/bday_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/todo_button"
        android:layout_margin="10dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/twotone_cake_black_24dp"
        android:text="Birthday"
        android:textSize="18sp" />


</RelativeLayout>