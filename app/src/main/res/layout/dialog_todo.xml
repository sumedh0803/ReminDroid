<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:textColor="#ff000000"
        android:id="@+id/todo_title"
        android:inputType="textCapSentences"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:hint="Enter Title">
        <requestFocus />
    </EditText>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/todo_date_picker"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip">
        <Button
            android:id="@+id/btn_todo_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Date"
            android:layout_weight="0.0" />
        <TextView
            android:textSize="15.0sp"
            android:textColor="#ff000000"
            android:id="@+id/txt_todo_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/todo_time_picker"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip">
        <Button
            android:id="@+id/btn_todo_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Time"
            android:layout_weight="0.0" />
        <TextView
            android:textSize="15.0sp"
            android:textColor="#ff000000"
            android:id="@+id/txt_todo_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/todo_is_set"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:text="Set Reminder" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip">
        <Button
            android:textColor="#ff000000"
            android:id="@+id/btn_todo_cancel"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_weight="1.0" />
        <Button
            android:textColor="#ff000000"
            android:id="@+id/btn_todo_set"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="Create"
            android:layout_weight="1.0" />
    </LinearLayout>

</LinearLayout>